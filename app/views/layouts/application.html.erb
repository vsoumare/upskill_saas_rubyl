             <i class="fa fa-group"></i>
             AfricaBus
         <% end %>     
        </div>
      <div class="collapse navbar-collapse" id="main-nav-collapse">
      <ul class="nav navbar-nav navbar-right">
                <!--<li><a href="/about">About Us</a></li>-->
                <li><%= link_to "About Us", about_path %></li>
                
            </ul>
        </div>
      </div>
    </nav>
    
    <div>
      <%= yield %>
    </div>
  </body>
</html>
